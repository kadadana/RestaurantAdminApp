<script>
    function postLogout() {
        if (!confirm('Are you sure you want to log out?')) return;

        fetch('/logout', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({})
        })
            .then(res => {
                if (res.ok) location.reload();
            });
    };
</script>